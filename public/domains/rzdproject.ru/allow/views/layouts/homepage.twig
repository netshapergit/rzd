{% set blogPosts = [] %}

{% for city in page.active_sub_pages %}
	{% if city.layout_id == 7 %}
		{% for cat in city.active_sub_pages %}
			{% if cat.layout_id == 16 %}
				{% for article in cat.active_sub_pages %}
					{% set blogPosts = blogPosts|merge([article]) %}
				{% endfor %}
			{% endif %}
		{% endfor %}
	{% endif %}
{% endfor %}


<section class="hp-blog">
	<div class="cont">
		<h3 class="section__title">Новости</h3>
		<div class="section__subtitle">Все самое интересное</div>
		<div class="hp-blog__wrapper">
			{% for item in blogPosts|sort('created_at')|reverse|slice(0, 6) %}
			<div class="hp-post">
				<div class="hp-post__top">
					<div class="hp-post__img">
						<a href="{$ item.path $}">
							{% if item.field_image %}
								<img src="/site/data/images/medium/{$ item.field_image $}">
							{% else %}
								<img src="/site/theme/images/slide1.jpg">
							{% endif %}
						</a>
					</div>
				</div>
				<div class="hp-post__mid">
					<div class="hp-post__title">
						<a href="{$ item.path $}">{$ item.field_header $}</a>
					</div>
					<div class="hp-post__desc">
						{$ item.field_summary $}
					</div>
				</div>
			</div>
			{% endfor %}
		</div>
		<div class="hp-blog__bottom">
			<a href="/news/" class="alink alink--red">СМОТРЕТЬ ВСЕ</a>
		</div>
	</div>
</section>





